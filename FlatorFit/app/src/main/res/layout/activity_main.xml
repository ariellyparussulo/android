<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="10dp"
	android:orientation="vertical"
	tools:context="com.example.arielly_pc.flatorfit.MainActivity">

	<RelativeLayout
		android:id="@+id/weightBtn"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="5dp"
		android:layout_weight="1"
		android:background="@drawable/rounded_corners"
		android:backgroundTint="#2ca5e5">

		<ImageView
			android:id="@+id/weightImg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			app:srcCompat="@drawable/weight"/>

		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:paddingBottom="20dp"
			android:paddingLeft="10dp"
			android:text="Weight Lifting"
			android:textColor="@android:color/background_light"
			android:textSize="20sp"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/textView3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="2dp"
			android:duplicateParentState="false"
			android:paddingLeft="10dp"
			android:text="Do you even lift?"
			android:textColor="#fff"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/textView4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:paddingBottom="3dp"
			android:paddingRight="5dp"
			android:text="30%"
			android:textColor="@android:color/background_light"
			android:textSize="34sp"/>

		<TextView
			android:id="@+id/textView5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:background="@drawable/rounded_corners"
			android:backgroundTint="#10000000"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="5dp"
			android:paddingTop="5dp"
			android:text="10 Sets"
			android:textColor="#ffffff"
			android:textSize="16sp"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/yogaBtn"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="5dp"
		android:layout_weight="1"
		android:background="@drawable/rounded_corners"
		android:backgroundTint="#916bcd">

		<ImageView
			android:id="@+id/yogaImg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			app:srcCompat="@drawable/lotus"/>

		<TextView
			android:id="@+id/textView6"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:paddingBottom="20dp"
			android:paddingLeft="10dp"
			android:text="Yoga"
			android:textColor="@android:color/background_light"
			android:textSize="20sp"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/textView7"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="2dp"
			android:duplicateParentState="false"
			android:paddingLeft="10dp"
			android:text="Namaste"
			android:textColor="#fff"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/textView8"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:paddingBottom="3dp"
			android:paddingRight="5dp"
			android:text="20%"
			android:textColor="@android:color/background_light"
			android:textSize="34sp"/>

		<TextView
			android:id="@+id/textView9"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:background="@drawable/rounded_corners"
			android:backgroundTint="#10000000"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="5dp"
			android:paddingTop="5dp"
			android:text="1 Hour"
			android:textColor="#ffffff"
			android:textSize="16sp"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/cardioBtn"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="5dp"
		android:layout_weight="1"
		android:background="@drawable/rounded_corners"
		android:backgroundTint="#52ad56">

		<ImageView
			android:id="@+id/cardioImg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			app:srcCompat="@drawable/heart"/>

		<TextView
			android:id="@+id/textView11"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:paddingBottom="20dp"
			android:paddingLeft="10dp"
			android:text="Cardio"
			android:textColor="@android:color/background_light"
			android:textSize="20sp"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/textView10"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="2dp"
			android:duplicateParentState="false"
			android:paddingLeft="10dp"
			android:text="Run like crazy"
			android:textColor="#fff"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/textView12"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:paddingBottom="3dp"
			android:paddingRight="5dp"
			android:text="22%"
			android:textColor="@android:color/background_light"
			android:textSize="34sp"/>

		<TextView
			android:id="@+id/textView13"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:background="@drawable/rounded_corners"
			android:backgroundTint="#10000000"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="5dp"
			android:paddingTop="5dp"
			android:text="5 Miles"
			android:textColor="#ffffff"
			android:textSize="16sp"/>
	</RelativeLayout>

</LinearLayout>
