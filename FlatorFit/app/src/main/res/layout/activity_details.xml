<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mainBG"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#2ca5e5"
	android:orientation="vertical"
	tools:context="com.example.arielly_pc.flatorfit.DetailsActivity">

	<TextView
		android:id="@+id/txtTitleExercise"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="20dp"
		android:paddingTop="20dp"
		android:text="Weight Lifting"
		android:textAlignment="center"
		android:textColor="#FFFFFF"
		android:textSize="30sp"
		/>

	<ImageView
		android:id="@+id/imgExercise"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:srcCompat="@drawable/weight"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="10dp"
		android:background="@drawable/rounded_corners"
		android:backgroundTint="#10000000"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textView14"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="20dp"
			android:paddingTop="20dp"
			android:text="Mark It Complete!"
			android:textAlignment="center"
			android:textColor="#FFF"
			android:textSize="26sp"/>

		<CheckBox
			android:id="@+id/chkSession1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:checked="true"
			android:paddingLeft="20dp"
			android:text="Complete Set 1"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			app:buttonTint="#FFFFFF"/>

		<CheckBox
			android:id="@+id/chkSession2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:paddingLeft="20dp"
			android:text="Complete Set 2"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			app:buttonTint="#FFFFFF"/>

		<CheckBox
			android:id="@+id/chkSession3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:paddingLeft="20dp"
			android:text="Complete Set 3"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			app:buttonTint="#FFFFFF"/>

		<CheckBox
			android:id="@+id/chkSession4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:paddingLeft="20dp"
			android:text="Complete Set 4"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			app:buttonTint="#FFFFFF"/>

		<CheckBox
			android:id="@+id/chkSession5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:paddingLeft="20dp"
			android:text="Complete Set 5"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			app:buttonTint="#FFFFFF"/>

		<CheckBox
			android:id="@+id/chkSession6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:paddingLeft="20dp"
			android:text="Complete Set 6"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			app:buttonTint="#FFFFFF"/>

	</LinearLayout>
</LinearLayout>
